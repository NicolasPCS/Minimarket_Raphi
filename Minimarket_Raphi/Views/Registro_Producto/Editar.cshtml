@model Minimarket_Raphi.Models.Registro_Producto

@{
    ViewBag.Title = "Editar";
}
<div class="jumbotron">
    <h2>Editar</h2>


    @using (Html.BeginForm("Modificar", "Registro_Producto", FormMethod.Post, new
    {
        @class = "formhorizontal",
        role = "form"
    }))

    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Registro_Producto</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Codigo_Producto)

            @Html.HiddenFor(model => model.ID_HojaRegistro)

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>