@using Minimarket_Raphi.Models
@using System.Data.Entity.Core.Objects;
@model IEnumerable<Minimarket_Raphi.Models.Kardex>
@{
    ViewBag.Title = "ActualizarKardex";
}
<div class="jumbotron">
    <h2>Actualizar Kardex</h2>
    @using (Html.BeginForm("ActualizarKardex", "Home", FormMethod.Post))
    {
        <style>
            div {
                margin-bottom: 10px;
            }

            label {
                display: inline-block;
                width: 150px;
                text-align: right;
            }
        </style>
        @Html.Label("Ingrese ID Kardex:")
        @Html.TextBox("ID_Kardex")
        <br>
        @Html.Label("Ingrese Saldo Inicial:")
        @Html.TextBox("Saldo_Inicial")
        <br>
        @Html.Label("Ingrese Saldo Final:")
        @Html.TextBox("Saldo_Final")
        <br>
        @Html.Label("Ingrese Monto Venta:")
        @Html.TextBox("Monto_Venta")
        <br>
        @Html.Label("Ingrese Código Empleado:")
        @Html.TextBox("Codigo_Empleado")
        <br>
        @Html.Label("Ingrese Ganancia")
        @Html.TextBox("Ganancia")
        <br>
        @Html.Label("Ingrese Día:")
        @Html.TextBox("Dia")
        <br>
        @Html.Label("Ingrese Mes:")
        @Html.TextBox("Mes")
        <br>
        @Html.Label("Ingrese Año:")
        @Html.TextBox("Anio")
        <br>

        <input type="submit" class="btn btn-success" value="Enviar">
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID_Kardex)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Saldo_Inicial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Saldo_Final)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Monto_Venta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Codigo_Empleado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ganancia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Anio)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID_Kardex)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Saldo_Inicial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Saldo_Final)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Monto_Venta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo_Empleado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ganancia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Anio)
                    </td>
                </tr>
            }
        </table>
    }
</div>